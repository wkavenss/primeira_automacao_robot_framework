{
  "python.pythonPath": "venv/bin/python3",
  "robot.language-server.python": "venv/bin/python3",
  "robot.language-server.args": [
    "-m",
    "robotframework_ls"
  ],
  "robot.python.executable": "venv/bin/python3",
  "robot.variables": {
    "${EXECDIR}": "."
  },
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.vscode": false
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python"
}